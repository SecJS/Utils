{
  "name": "@secjs/utils",
  "version": "1.8.4",
  "description": "Utils functions and classes for Node.js",
  "license": "MIT",
  "author": "Jo√£o Lenon <lenon@athenna.io>",
  "bugs": "https://github.com/SecJS/Utils/issues",
  "repository": "https://github.com/SecJS/Utils.git",
  "homepage": "https://github.com/SecJS/Utils#readme",
  "keywords": [
    "utils",
    "json",
    "uuid",
    "path",
    "string",
    "number",
    "number",
    "filesystem",
    "pagination"
  ],
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint:fix && cross-env NODE_OPTIONS=--experimental-vm-modules jest --colors --verbose --runInBand",
    "test:coverage": "npm run --silent test -- --coverage",
    "lint:fix": "eslint \"{src,tests}/**/*.js\" --fix"
  },
  "files": [
    "src/*.js",
    "src/**/*.js",
    "*.js"
  ],
  "imports": {
    "#src/*": "./src/*.js",
    "#tests/*": "./tests/*.js"
  },
  "exports": {
    ".": "./index.js"
  },
  "dependencies": {
    "bytes": "3.1.2",
    "callsite": "1.0.0",
    "chalk": "5.0.1",
    "change-case": "4.1.2",
    "debug": "4.3.4",
    "http-status-codes": "2.2.0",
    "kind-of": "6.0.3",
    "lodash": "4.17.21",
    "mime-types": "2.1.35",
    "minimatch": "5.0.1",
    "ms": "2.1.3",
    "parent-module": "3.0.0",
    "pluralize": "8.0.0",
    "prepend-file": "2.0.1",
    "uuid": "8.3.2",
    "validator-brazil": "1.2.2",
    "youch": "3.1.1",
    "youch-terminal": "2.1.3"
  },
  "devDependencies": {
    "commitizen": "4.2.4",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "3.0.9",
    "jest": "27.5.1",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "lint-staged && exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "**/tests/**/*Test.js"
    ],
    "transform": {},
    "coverageDirectory": "./tests/Coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "#src/(.*)": "<rootDir>/src/$1",
      "#tests/(.*)": "<rootDir>/tests/$1",
      "chalk": "chalk/source/index.js",
      "#ansi-styles": "chalk/source/vendor/ansi-styles/index.js",
      "#supports-color": "chalk/source/vendor/supports-color/index.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": false,
    "printWidth": 80,
    "overrides": [
      {
        "files": "tests/**/*",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "camelcase": "off",
      "dot-notation": "off",
      "prettier/prettier": "error",
      "no-useless-constructor": "off"
    }
  }
}
